<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="8dp"
                android:topRightRadius="3dp" />
            <solid
                android:color="@color/colorSombra" />
        </shape>
    </item>
    <item android:bottom="2px" android:top="1px" android:left="1px" android:right="1px">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="8dp"
                android:topRightRadius="3dp" />
            <solid
                android:color="@color/colorMensajeSalida" />
        </shape>
    </item>
</layer-list>