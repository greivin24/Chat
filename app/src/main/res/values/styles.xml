<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="stl_txv_mensaje" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dmn_2</item>
        <item name="android:layout_marginTop">@dimen/dmn_1</item>
        <item name="android:paddingBottom">@dimen/dmn_8</item>
        <item name="android:paddingStart">@dimen/dmn_8</item>
        <item name="android:paddingEnd">@dimen/dmn_15</item>
        <item name="android:paddingTop">@dimen/dmn_7</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="stl_txv_mensaje_recibido" parent="stl_txv_mensaje">
        <item name="android:background">@drawable/mensaje_recibido</item>
    </style>

    <style name="stl_txv_mensaje_enviado" parent="stl_txv_mensaje">
        <item name="android:background">@drawable/mensaje_enviado</item>
    </style>

</resources>
